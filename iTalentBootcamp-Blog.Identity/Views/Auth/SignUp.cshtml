@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout";
}
@model SignUpViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Kayıt Ol</h1>
                        </div>
                        <div asp-validation-summary="ModelOnly" id="errMsg" style="color:white;font-weight:500;background-color:red;border-radius:5px;">
                            @ViewBag.Message
                        </div>
                        <form class="user" method="post" asp-controller="Auth" asp-action="SignUp">
                            <div class="form-group">
                                <input type="text" asp-for="Username" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input type="tel" asp-for="Phone" class="form-control form-control-user" placeholder="Cep Telefonu">
                                <span class="text-danger" asp-validation-for="Phone"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Şifre">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="PasswordConfirm" class="form-control form-control-user" placeholder="Şifre Tekrar">
                                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="AuthKey" class="form-control form-control-user" placeholder="Üyelik Anahtar Kodu">
                                <span class="text-danger" asp-validation-for="AuthKey"></span>
                            </div>
                            @*<div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                    <label class="custom-control-label" for="customCheck">
                                        Remember Me
                                    </label>
                                </div>
                            </div>*@
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Kayıt Ol" />
                        </form>
                        <hr>
                        @*<div class="text-center">
                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                        </div>*@
                        <div class="text-center">
                            <a asp-controller="Auth" asp-action="SignIn" class="small">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

