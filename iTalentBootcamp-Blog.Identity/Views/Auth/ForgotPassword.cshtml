@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "_Layout";
}
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
    @model ForgotPasswordViewModel
<div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-6">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Şifremi Unuttum</h1>
                            @if (TempData["Info"] != null)
                            {
                                <p id="info" style="color:green;font-weight:600;background-color:lightgreen;padding:10px;border-radius:25px;text-align:center;">
                                    @TempData["Info"]
                                </p>
                            }
                            <p>Şifre yenileme linki, e-posta adresinize gönderilecektir.</p>
                        </div>
                        <div asp-validation-summary="ModelOnly" id="errMsg" style="color:white;font-weight:500;background-color:red;border-radius:5px;">
                            @ViewBag.Message
                        </div>
                        <form class="user" method="post">
                            <div class="form-group">
                                <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Gönder" />
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

