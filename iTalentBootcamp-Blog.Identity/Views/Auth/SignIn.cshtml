@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}
@model SignUpViewModel
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Giriş Yap</h1>
                        </div>
                        @if(!string.IsNullOrEmpty(ViewBag.Message)){
                            <p id="succeedMsg" style="color:green;font-weight:600;background-color:lightgreen;padding:10px;border-radius:25px;text-align:center;">
                                @ViewBag.Message
                            </p>
                        }
                        <form class="user" method="post" asp-controller="Auth" asp-action="SignIn">
                            <div class="form-group">
                                <input type="text" asp-for="Username" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                @*<span class="text-danger" asp-validation-for="Username"></span>*@
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Şifre">
                                @*<span class="text-danger" asp-validation-for="Password"></span>*@
                            </div>
                            @*<div class="form-group">
                            <div class="custom-control custom-checkbox small">
                            <input type="checkbox" class="custom-control-input" id="customCheck">
                            <label class="custom-control-label" for="customCheck">
                            Remember Me
                            </label>
                            </div>
                            </div>*@
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Giriş Yap" />
                        </form>
                        <hr>
                        @*<div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                        </div>*@
                        <div class="text-center">
                            <a class="small" asp-controller="Auth" asp-action="SignUp">Kayıt Ol</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

