@{
    ViewData["Title"] = "Profil";
    Layout = "_Layout";
}
@model UserEditViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Profil</h1>
                            </div>
                            <div asp-validation-summary="ModelOnly" id="errMsg" style="color:white;font-weight:500;background-color:red;border-radius:5px;">
                                @ViewBag.Message
                            </div>
                            <form class="user" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <input type="text" asp-for="Username" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <input type="tel" asp-for="Phone" class="form-control form-control-user" placeholder="Cep Telefonu">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="City" class="form-control form-control-user" placeholder="Şehir">
                                    <span class="text-danger" asp-validation-for="City"></span>
                                </div>
                                <div class="form-group">
                                    <input type="date" asp-for="BirthDay" class="form-control" placeholder="Doğum Tarihi">
                                    <span class="text-danger" asp-validation-for="BirthDay"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="gender">Cinsiyet</label>
                                    </div>
                                    <select asp-for="Gender" asp-items="@ViewBag.genders" class="custom-select" id="gender">
                                        <option value="0">Seçiniz</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="Gender"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="custom-file">
                                        <input type="file" accept="image/jpg, image/jpeg, image/png, image/webp" asp-for="Picture" class="custom-file-input" id="picture">
                                        <label class="custom-file-label" for="picture">Görsel seçiniz</label>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Güncelle" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>