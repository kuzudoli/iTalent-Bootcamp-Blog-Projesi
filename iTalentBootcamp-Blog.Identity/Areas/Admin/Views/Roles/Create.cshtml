@model RoleCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Rol Oluştur</h1>
        <form asp-area="Admin" asp-controller="Roles" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-area="Admin" asp-controller="Roles" asp-action="Index">Back to List</a>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
