@{
}
@model List<AssignRoleToUserViewModel>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Rol Atama</h1>
        <form asp-area="Admin" asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for(var i = 0; i < Model.Count; i++ )
            {
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].Name" />

                        <input type="checkbox" asp-for="@Model[i].Exist" class="custom-control-input" id="customCheck_@i">
                        <label class="custom-control-label" for="customCheck_@i">@Model[i].Name</label>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Ata" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-area="Admin" asp-controller="Roles" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>