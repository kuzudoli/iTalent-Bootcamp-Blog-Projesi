@model List<PostViewModel>
@{
    ViewData["Title"] = "GetAll";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h3>Gönderiler</h3>
    <a asp-route="AddPost" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus-square"></i> Yeni Gönderi
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width="5%">ID</th>
                        <th width="15%">Kategori</th>
                        <th>Başlık</th>
                        <th width="20%">Oluş. Tarihi</th>
                        <th width="15%">İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Oluş. Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.Id</td>
                            <td>@post.Category.Name</td>
                            <td>@post.Title</td>
                            <td>@post.CreatedAt.ToShortDateString()</td>
                            <td>
                                <a asp-controller="Post" asp-action="UpdatePost" asp-route-id="@post.Id" class="btn btn-success btn-icon-split btn-sm">
                                    <span class="text">Güncelle</span>
                                </a>

                                <a asp-controller="Post" asp-action="DeletePost" asp-route-id="@post.Id" class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>