@model CreateCategoryViewModel

<h3 class="pb-3">Kategori Oluştur</h3>

<div class="row">
    <div class="col align-self-center">
        <form class="w-50" method="post" asp-route="AddCategory">
            <div class="form-group">
                <input type="text" class="form-control form-control-user" asp-for="Name" placeholder="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Kaydet">
            <hr>
        </form>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }