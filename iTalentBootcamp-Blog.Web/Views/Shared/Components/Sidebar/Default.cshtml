@model (List<CategoryWithPostsDto>, List<PostPopularDto>)

<div class="col-lg-4 sidebar ftco-animate fadeInUp ftco-animated">
    <div class="sidebar-box">
        <div class="search-form">
            <div class="form-group">
                <span class="icon icon-search"></span>
                <input type="text" class="form-control" id="searchInput" placeholder="Bir konu başlığı arayın...">
            </div>

            <ul class="searchResult" id="searchResult"></ul>
        </div>
    </div>
    <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
        <h3 class="sidebar-heading">Kategoriler</h3>
        <ul class="categories">
            @foreach (var category in Model.Item1)
            {
                <li><a href="#">@category.Name<span>(@category.Posts.Count)</span></a></li>
            }
        </ul>
    </div>

    <div class="sidebar-box ftco-animate fadeInUp ftco-animated">
        <h3 class="sidebar-heading">Popüler Yazılar</h3>
        @foreach (var post in Model.Item2)
        {
            <div class="block-21 mb-4 d-flex">
                <img class="blog-img mr-4 imgFit" src="/pictures/@post.ImageUrl">
                <div class="text">
                    <h3 class="heading"><a asp-route="PostDetails" asp-route-postId="@post.Id">@post.Title</a></h3>
                    <div class="meta">
                        <div><span class="icon-calendar"></span> @post.CreatedAtShortString</div>
                        <div><span class="icon-heart"></span> @post.LikeCount</div>
                        <div><span class="icon-comment"></span> @post.Comments.Count</div>
                    </div>
                </div>
            </div>
        }

        <div class="sidebar-box ftco-animate">
            <h3 class="sidebar-heading">Hava durumu</h3>
            <p>{HAVA DURUMU API VERISI}</p>
        </div>
    </div>
</div>